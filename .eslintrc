{
  "root": true,
  "extends": "eslint:all",
  "parser": "babel-eslint",
  "parserOptions": {
    "allowImportExportEverywhere": true,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    },
    "ecmaVersion": 2015,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true
  },
  "plugins": ["react"],
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "quote-props": ["error", "consistent-as-needed"],
    "sort-keys": [
      "warn",
      "asc",
      {
        "caseSensitive": true,
        "natural": true
      }
    ],
    "camelcase": [
      "error",
      {
        "properties": "never"
      }
    ],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "object-curly-spacing": ["error", "always"],
    "comma-dangle": ["error", "only-multiline"],
    "max-len": ["warn", 100],
    "one-var": ["error", "never"],
    "padded-blocks": ["error", "never"],
    "sort-imports": [
      "warn",
      {
        "ignoreCase": false
      }
    ],
    "multiline-comment-style": ["warn", "always"],
    "function-paren-newline": ["error", "consistent"]
  }
}
